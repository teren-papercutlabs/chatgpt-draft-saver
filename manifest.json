{
  "manifest_version": 3,
  "name": "ChatGPT Draft Saver",
  "version": "1.0.0",
  "description": "Automatically saves drafts of your ChatGPT conversations to prevent losing work",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 